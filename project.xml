<?xml version="1.0" encoding="utf-8"?>
<project>
	<!-- NMML reference: https://gist.github.com/1763850 -->
	
	<!-- metadata, make sure 'package' is at least 3 segments (ie. com.mycompany.myproject) -->
	<meta title="Charon_haxe" package="Charonhaxe" version="1.0.0" company="Victor Reynolds" />
	
	<!-- output -->
	<app main="Main" file="Charonhaxe" path="bin" />
	
	<window background="#112233" fps="60" />
	<window width="960" height="540" unless="mobile" />
	<window orientation="landscape" vsync="false" antialiasing="0" if="cpp" />
	<window allowHighDPI="false" />
	
	<!-- classpath, haxe libs -->
	<source path="src" />
	<haxelib name="openfl" />
	
	<!-- assets -->
	<assets path="assets/img" rename="img" />
	<assets path="assets/fonts" rename="fonts" />
	<assets path="assets/levels" rename="levels" />
	
	<!-- optimize output
	<haxeflag name="-dce full" /> -->
	
</project>